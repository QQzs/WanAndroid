<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/taskAdd"
            android:gravity="center"
            android:textSize="@dimen/fontsize16"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_task_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/comfire_text"
            android:gravity="center"
            android:textSize="@dimen/fontsize16"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taskTitle"
            android:textSize="@dimen/fontsize15"
            android:textColor="@color/font_default"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <EditText
            android:id="@+id/ed_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text=""
            android:textSize="@dimen/fontsize15"
            android:textColor="@color/font_gray"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_task_title"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    </RelativeLayout>

    <com.zs.demo.commonlib.view.DashView
        style="@style/dash_style"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_task_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taskDate"
            android:textSize="@dimen/fontsize15"
            android:textColor="@color/font_default"
            android:layout_centerVertical="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/tv_task_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/fontsize15"
            android:textColor="@color/font_gray"
            android:hint="@string/taskDateHint"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_task_date_title"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    </RelativeLayout>

    <com.zs.demo.commonlib.view.DashView
        style="@style/dash_style"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_task_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taskContent"
            android:textSize="@dimen/fontsize15"
            android:textColor="@color/font_default"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <EditText
            android:id="@+id/ed_task_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text=""
            android:textSize="@dimen/fontsize15"
            android:textColor="@color/font_gray"
            android:hint="@string/hintContent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_task_content_title"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    </RelativeLayout>

</LinearLayout>